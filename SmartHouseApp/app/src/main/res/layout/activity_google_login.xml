<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udc.muei.apm.apm_smarthouse.activities.GoogleLogin"
    android:background="@drawable/gradient_login_2">


    <ImageView
        android:id="@+id/icono_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/home" />

    <TextView
        android:id="@+id/titulo_login_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/icono_login"
        android:text="@string/login_google_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitulo_login_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_login_google"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:text="@string/texto_login_google_introduccion"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:textColor="@android:color/white" />

    <com.google.android.gms.common.SignInButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sign_in_button_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:layout_centerHorizontal="true"
        app:buttonSize="wide"
        app:colorScheme="dark" />

</RelativeLayout>
