<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udc.muei.apm.apm_smarthouse.activities.GoogleLogin"
    android:background="@drawable/gradient_login_2">


    <ImageView
        android:id="@+id/icono_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        app:srcCompat="@drawable/home" />

    <TextView
        android:id="@+id/titulo_config_serv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/icono_login"
        android:text="@string/login_google_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitulo_config_serv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_config_serv"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/eula_subtitulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/subtitulo_config_serv">

        <TextView
            android:id="@+id/explicacion_cofing_serv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical|horizontal"
            android:text="@string/contenido_eula"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_below="@id/edittext_puerto"
        android:layout_marginBottom="42dp">

        <Button
            android:id="@+id/button_cancel_eula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_eula"
            android:textColor="#ffffff"
            android:background="@drawable/button_background"
            android:textSize="18sp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:theme="@style/MyButton" />

        <Button
            android:id="@+id/button_agree_eula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@drawable/button_background2"
            android:text="@string/agree_eula"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="2"
            android:theme="@style/MyButton"
            />
    </LinearLayout>


</RelativeLayout>